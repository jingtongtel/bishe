package com.boco.human.v01.controller;

import java.util.Map;

import org.springframework.beans.factory.annotation.Value;
import org.springframework.web.bind.annotation.CrossOrigin;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

import com.boco.human.v01.DataViewManager;
import com.boco.human.v01.RESTRequst;
import com.boco.human.v01.handler.ViewHandler;



/**
 * “人口”主题的controller类。
 * @author 侯捷西
 * 
 */

//RESTful
@RestController

//处理浏览器跨域访问
@CrossOrigin

@RequestMapping("/v01/metric")
public class PopulationController extends BaseController{
	/**
	 * @param paraMap 封装了客户端请求Map,具体属性需要参考相关文档
	 * @return 序列化为JSON对象，返回给客户端
	 */
	@PostMapping("/population/region")
	public Object codeKvcode(@RequestBody(required = false) Map<String, Map<String, ?>> paraMap) {
		RESTRequst dg = new RESTRequst(paraMap,"/population/region");
		ViewHandler vh = DataViewManager.findViewHandler(dg.getHandlerId());
		return vh.getDataMap(dg.getRequestMap());
	}
	
	
	
	/**
	 * @param paraMap
	 *            封装了客户端请求Map,具体属性需要参考相关文档
	 * @return 序列化为JSON对象，返回给客户端
	 */
	@PostMapping("/population/point")
	public Object travelIntensity(@RequestBody(required = false) Map<String, Map<String, ?>> paraMap,
			@Value("#{rsconfig['metrics.population.point']}") String metricName) {
		return this.doHandle(paraMap, metricName);
	}

}
