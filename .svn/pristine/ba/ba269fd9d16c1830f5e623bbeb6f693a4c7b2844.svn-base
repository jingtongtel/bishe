package com.boco.mbd.controller.demo;

import java.util.HashMap;
import java.util.List;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.ResponseBody;
import com.alibaba.fastjson.JSON;
import com.boco.mbd.bean.demo.Student;
import com.boco.mbd.service.demo.StudentService;

/**
 * 对student实体操作的mvc控制器
 * 负责接收客户端参数，请求转发，调用业务逻辑层service，把处理结果返回给client
 * 
 * @author liangpeng
 * @date 2017-02-07
 */
@Controller
@RequestMapping("/student")
public class StudentController {

	@Autowired
	private StudentService studentService;//自动注入业务逻辑层service

	/**
	 * 查询全量student信息
	 * @param request
	 * @param response
	 * @return 全量student数据
	 */
	@RequestMapping("queryAll.do")
	public @ResponseBody String queryAll(HttpServletRequest request,
			HttpServletResponse response) {
		response.setHeader("Access-Control-Allow-Origin", "*");

		List<Student> studentList = studentService.queryAll();

		return JSON.toJSONString(studentList);
	}

	/**
	 * 根据条件name，查询student信息
	 * @param request
	 * @param response
	 * @return 条件匹配的student数据
	 */
	@SuppressWarnings({ "rawtypes", "unchecked" })
	@RequestMapping("queryStudent.do")
	public @ResponseBody HashMap queryStudent(HttpServletRequest request,
			HttpServletResponse response) {
		response.setHeader("Access-Control-Allow-Origin", "*");
		HashMap retMap = new HashMap<String, String>();

		//接收客户端传入的参数
		String name = request.getParameter("name");

		//构造查询参数map
		HashMap paramap = new HashMap<String, String>();
		paramap.put("name", name);
		
		//调用service层方法
		List<Student> studentList = studentService.queryStudent(paramap);

		//自定义返回结果结构
		retMap.put("data", studentList);

		return retMap;
	}
}
