package com.boco.mbd.service.demo;

import java.util.HashMap;
import java.util.List;

import javax.annotation.Resource;

import org.springframework.stereotype.Service;
import org.springframework.transaction.annotation.Transactional;

import com.boco.mbd.bean.demo.Student;
import com.boco.mbd.mapper.demo.StudentMapper;

/**
 * 对Student对象操作的业务逻辑层，调用ORM层接口，把结果返回给controller，带有事务控制。
 * @author liangpeng
 * @date 2017-02-07
 */
@Service
@Transactional
public class StudentService {

	@Resource
	private StudentMapper studentMapper;
	
	/**
	 * 全量查询
	 * @return
	 */
	public List<Student> queryAll(){
		return studentMapper.queryAll();
	}
	/**
	 * 根据条件查询
	 * @param map
	 * @return
	 */
	public List<Student> queryStudent(HashMap map){
		return studentMapper.queryStudent(map);
	}
}
